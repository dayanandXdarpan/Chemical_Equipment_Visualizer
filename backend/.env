# Development Environment Variables for Backend
# This file contains default values for local development

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-dev-key-change-in-production-123456789
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development)
# For production, use DATABASE_URL or configure PostgreSQL

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Settings (using console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-dev-email@gmail.com
EMAIL_HOST_PASSWORD=your-dev-app-password

# Version
APP_VERSION=1.1.0.0